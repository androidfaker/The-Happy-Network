    android:id="@+id/zhanghao"
    android:drawableLeft="@drawable/zhanghao"
    android:hint="@string/yonghuming"

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_select</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="EditTextNoIMG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_select</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>